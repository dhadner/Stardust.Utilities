<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <!-- Exclude the Test subfolder from compilation - it has its own project -->
  <ItemGroup>
    <Compile Remove="Test\**" />
    <None Remove="Test\**" />
    <EmbeddedResource Remove="Test\**" />
  </ItemGroup>

  <!-- Exclude the Tool subfolder from compilation - it has its own project -->
  <ItemGroup>
    <Compile Remove="Tool\**" />
    <None Remove="Tool\**" />
    <EmbeddedResource Remove="Tool\**" />
  </ItemGroup>

</Project>
