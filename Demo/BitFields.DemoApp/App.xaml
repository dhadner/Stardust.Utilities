<Application x:Class="BitFields.DemoApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="AppBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1B2735" Offset="0" />
            <GradientStop Color="#FF314755" Offset="0.5" />
            <GradientStop Color="#FF26A0DA" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="PanelBackground" Color="#FF0F172A" />
        <SolidColorBrush x:Key="AccentBrush" Color="#FF38BDF8" />
    </Application.Resources>
</Application>
