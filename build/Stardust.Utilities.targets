<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!--
    Auto-exclude generated files from compilation to prevent duplicates.
    The .props file enables EmitCompilerGeneratedFiles for IntelliSense.
    This .targets file excludes those files from being compiled twice.
  -->
  <Target Name="ExcludeStardustGeneratedFiles" 
          BeforeTargets="CoreCompile" 
          Condition="'$(EmitCompilerGeneratedFiles)' == 'true'">
    <ItemGroup>
      <Compile Remove="$(CompilerGeneratedFilesOutputPath)\**\*.cs" />
    </ItemGroup>
  </Target>
</Project>
